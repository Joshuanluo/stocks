<div class="text-center">
    
    <main class="form-signin w-100 m-auto">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <% if flash[:error].present? %>
            <h3><%= flash[:error] %></h3>
        <% end %>

        <%= form_with url: login_path do |f| %>
        
            <div class="form-floating ">
                <%= f.email_field :email, :class=>"form-control", :id=>"floatingInput", :placeholder=>"name@example.com"%>
                <%= f.label :email, :for=>"floatingInput" %>
            </div>
            <div class="form-floating">
                <%= f.password_field :password, :class=>"form-control", :id=>"floatingPassword", :placeholder=>"Password" %>
                <%= f.label :password, :for=>"floatingPassword" %>
            </div>
                <%= f.submit "Sign in", :class=>"w-100 btn btn-lg btn-primary" %>
        <% end %>
    </main>
</div>


